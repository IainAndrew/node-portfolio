include utils/mixins

doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
    title !{title}
    link(rel="stylesheet", href="/css/style.css")
    block header
  body
    .transition-overlay(data-color=page && page.overlayColor ? page.overlayColor : undefined)
    .container
      include ./navigation
      block content
      include ./footer
    script(src="/js/main.js")
    block scripts
